<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/shape">


    <Button
        android:id="@+id/startgame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/btn_shape"
        android:fontFamily="@font/muller"
        android:padding="15dp"
        android:text="START GAME"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/ball"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/ball"
        app:layout_constraintBottom_toTopOf="@id/startgame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vor" />

    <ImageView
        android:id="@+id/ballr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/ball"
        app:layout_constraintBottom_toTopOf="@id/startgame"
        app:layout_constraintEnd_toStartOf="@id/ball"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vor" />

    <ImageView
        android:id="@+id/balll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:scaleX="0.8"
        android:scaleY="0.8"
        app:layout_constraintBottom_toTopOf="@id/startgame"
        android:src="@drawable/ball"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ball"
        app:layout_constraintTop_toBottomOf="@id/vor" />

    <ImageView
        android:id="@+id/vor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vor"
        app:layout_constraintTop_toBottomOf="@id/mgoal"
        app:layout_constraintBottom_toTopOf="@+id/ball"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/mgoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muller"
        android:text="miss"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/vor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mypoints" />

    <TextView
        android:id="@+id/mypoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muller"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:text="MY POINTS IS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cball"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.18"
        app:layout_constraintDimensionRatio="1:1"
        app:cardCornerRadius="100dp"
        android:alpha="0.6"
        app:cardBackgroundColor="@color/miss"
        app:layout_constraintBottom_toBottomOf="@+id/vor"
        app:layout_constraintEnd_toEndOf="@+id/vor"
        app:layout_constraintStart_toStartOf="@+id/vor"
        app:layout_constraintTop_toTopOf="@+id/vor"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/lball"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.18"
        app:layout_constraintDimensionRatio="1:1"
        app:cardCornerRadius="100dp"
        android:alpha="0.6"
        app:cardBackgroundColor="@color/miss"
        app:layout_constraintBottom_toBottomOf="@+id/vor"
        app:layout_constraintEnd_toStartOf="@+id/cball"
        app:layout_constraintStart_toStartOf="@+id/vor"
        app:layout_constraintTop_toTopOf="@+id/vor"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/rball"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.18"
        app:layout_constraintDimensionRatio="1:1"
        app:cardCornerRadius="100dp"
        android:alpha="0.6"
        app:cardBackgroundColor="@color/miss"
        app:layout_constraintBottom_toBottomOf="@+id/vor"
        app:layout_constraintEnd_toEndOf="@+id/vor"
        app:layout_constraintStart_toEndOf="@+id/cball"
        app:layout_constraintTop_toTopOf="@+id/vor"/>


</androidx.constraintlayout.widget.ConstraintLayout>